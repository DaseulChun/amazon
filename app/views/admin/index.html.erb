<article>
  <div>
    <h2>Admin Panel</h2>
    <p>Number of Products: <%= @products.count %></p>
    <p>Number of Reviews: <%= @reviews.count %></p>
    <p>Number of Users: <%= @users.count %></p>
  </div>

  <div>
    <h3>Products</h3>
    <% @products.each do |product| %>
      <div>
        <%= product.id %> | <%= link_to product.title, product_path(product) %>
      </div>
    <% end %>
  </div>

  <div>
      <h3>Users</h3>
      <% @users.each do |user| %>
        <div>
          <%= user.id %> | <%= user.full_name %> (<%= user.email %>)
        </div>
      <% end %>
  </div>
</article>