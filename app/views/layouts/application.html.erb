<!DOCTYPE html>
<html>
  <head>
    <title>Amazon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <% flash.each do |type, message| %>
      <div class="flash flash-<%= type %>">
        <%= message %>
      </div>
    <% end %>

    <div class="d-flex flex-row justify-content-between bg-light">
      <h5 class="text-primary my-auto mx-3">Amazon</h5>
      <ul class="nav mx-3">
        <li class="nav-item"><%= link_to 'Home', products_path, class:"nav-link"%></li>
        <li class="nav-item"><%= link_to 'New Product', new_product_path, class:"nav-link"%></li>
        <li class="nav-item"><%= link_to 'All Products', products_path, class:"nav-link"%></li>
        <li class="nav-item"><%= link_to 'All Tags', tags_path, class:"nav-link"%></li>

        <% if user_signed_in? %>
          <li class="nav-item greeting">Hello, <%= current_user.full_name %></li>
          <li class="nav-item"><%= link_to 'Log Out', sessions_path, method: :delete, data: {confirm: "Are you sure you want to log out?"}, class:"nav-link" %></li>
        <% else %>
          <li class="nav-item"><%= link_to "Log In", new_session_path, class:"nav-link" %></li>
          <li class="nav-item"><%= link_to "Sign Up", new_user_path, class:"nav-link" %></li>
        <% end %>
      </ul>
    </div>
    <%= yield %>
  </body>
</html>
